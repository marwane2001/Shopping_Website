{%extends 'base.html.twig' %}

{% block body %}
    <style>
        .section-title {
            font-weight: bold;
            position: relative;
            display: inline-block;
        }

        .section-title::after {
            content: '';
            display: block;
            width: 50px;
            height: 3px;
            background-color: #000;
            margin-top: 5px;
        }

        .section-divider {
            border-top: 1px solid #d3d3d3;
            margin-top: -3px; /* Adjust this value if needed to align with the underline */
        }

        @media (max-width: 768px) {
            #banner {
                height: 100%;
                object-fit: cover;
            }

            .row-cols-md-5 > .col {
                flex: 0 0 48%;
                max-width: 48%;
            }


            .card-img-top {
                width: 100%;
                height: 150px;
                object-fit: cover;
            }

            .h-100 {
                height: 100% !important;
                width: 170px;
            }

            .card-body {
                padding: 0.75rem;
            }

            .card-text {
                font-size: 0.9rem;
            }
        }


        .card-img-top {
            width: 100%;
            height: auto;
        }

        @media (min-width: 768px) and (max-width: 991px) {
            .row-cols-2 > .col {
                flex: 0 0 50%;
                max-width: 50%;
            }

            .row-cols-md-3 > .col {
                flex: 0 0 33.333%;
                max-width: 33.333%;
            }

            .card-img-top {
                height: 200px;
                object-fit: cover;
            }
        }

        .card-img-top {
            width: 100%;
            height: auto;
        }
    </style>
    <div id="myCarousel" class="carousel slide mb-6" data-bs-ride="carousel">
        <div class="carousel-indicators">
            {% if headers|length > 1 %}
                {% for key, header in headers %}

                    <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="{{ key }}" {% if key == 0 %}class="active" aria-current="true" {% endif %} aria-label="{{ header.title }}"></button>

                {% endfor %}
            {% endif %}
        </div>

        <div class="carousel-inner">
            {% for key, header in headers %}
                <div class="carousel-item {% if key == 0 %}active{% endif %}">
                    <img src="/upload-dir/{{ header.illustration }}" class="bd-placeholder-img" width="100%"  xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="true" id="banner">
                    <div class="container">
                        <div class="carousel-caption text-start">
                            <h1 >{{ header.title }}</h1>
                            <p class="opacity-75">
                                {{ header.context }}
                            </p>
                            <p>
                                <a class="btn btn-lg btn-primary" href="{{ header.buttonLink }}">{{ header.buttonTitle }}</a>
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        {% if headers|length > 1 %}
            <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true" id="buttons"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next" id="buttons">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        {% endif %}
    </div>

    <div class="container marketing">
        <div class="container mt-4">
            <div class="row">
                <div class="col">
                    <h3 class="section-title">
                        Most-viewed items
                    </h3>
                    <hr class="section-divider">
                </div>
            </div>
        </div>
        <div class="container mt-3 mb-4">
            <div class="row row-cols-2 row-cols-md-5 g-4">
                <div class="col">
                    <div class="card" style="height: 100%">
                        <img src="/upload-dir/2024-08-11-cbf1a5ad76a1a7f5f881e018fea06a5bc06c5880.jpg" class="card-img-top" alt="Samsung Galaxy Buds3">
                        <div class="card-body">
                            <p class="card-text">iBUYPOWER - Y40 Gaming Desktop PC - Intel Core i7 14700F - NVIDIA GeForce RTX 4070 12GB - 32GB DDR5 RAM - 2TB NVMe - Black</p>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card" style="height: 100%">
                        <img src="/upload-dir/2024-08-11-cbf1a5ad76a1a7f5f881e018fea06a5bc06c5880.jpg" class="card-img-top" alt="Samsung Galaxy Buds3">
                        <div class="card-body">
                            <p class="card-text">OSP Home Furnishings - Mid-Back Office Chair - Gray</p>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card" style="height: 100%">
                        <img src="/upload-dir/2024-08-11-cbf1a5ad76a1a7f5f881e018fea06a5bc06c5880.jpg" class="card-img-top" alt="Samsung Galaxy Buds3">
                        <div class="card-body">
                            <p class="card-text">Microsoft - Xbox Wireless Controller for Xbox Series X</p>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card" style="height: 100%">
                        <img src="/upload-dir/2024-08-11-cbf1a5ad76a1a7f5f881e018fea06a5bc06c5880.jpg" class="card-img-top" alt="Samsung Galaxy Buds3">
                        <div class="card-body">
                            <p class="card-text">Samsung - Galaxy Watch Ultra Titanium Smartwatch 47mm LTE</p>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card" style="height: 100%">
                        <img src="/upload-dir/2024-08-11-cbf1a5ad76a1a7f5f881e018fea06a5bc06c5880.jpg" class="card-img-top" alt="Samsung Galaxy Buds3">
                        <div class="card-body">
                            <p class="card-text">LEGO - City Yellow Construction Excavator Toy Digger 60420</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- START THE FEATURETTES -->
        <hr class="featurette-divider">

        <div class="row featurette">

            <div class="col-md-7 order-md-2">

                <h2 class="featurette-heading fw-normal lh-1">Experience Unmatched Performance. <span class="text-body-secondary">The Best CPUs in the Market.</span></h2>

                <p class="lead">Our cutting-edge CPUs are engineered for speed and efficiency, ensuring you have the power to tackle any task with ease. Whether you're gaming, creating, or working, our newest processors deliver unrivaled performance and reliability.</p>

            </div>
            <div class="col-md-5 order-md-1">
                <img src="{{ asset('upload-dir/website-src/cpu.jpg') }}" alt="Descriptive alt text" class="featurette-image img-fluid mx-auto rounded" width="600" height="600">
            </div>
        </div>


        <hr class="featurette-divider">

        <div class="row featurette">

            <div class="col-md-7 order-md-2">

                <h2 class="featurette-heading fw-normal lh-1">Unleash Unparalleled Graphics Power. <span class="text-body-secondary">Top-Tier GPUs for Every Need.</span></h2>

                <p class="lead">Our state-of-the-art GPUs are designed to deliver breathtaking visuals and smooth performance. Whether you're a gamer, designer, or content creator, our latest graphics cards provide the power and precision needed for the most demanding tasks.</p>

            </div>
            <div class="col-md-5 order-md-1">
                <img src="{{ asset('upload-dir/website-src/gpu.jpg') }}" alt="Descriptive alt text" class="featurette-image img-fluid mx-auto rounded" width="600" height="600">
            </div>
        </div>


        <hr class="featurette-divider">

        <div class="row featurette">

            <div class="col-md-7 order-md-2">

                <h2 class="featurette-heading fw-normal lh-1">Step into the Future of Gaming. <span class="text-body-secondary">The Ultimate Gaming PCs.</span></h2>

                <p class="lead">Our gaming PCs are built with the latest technology, offering unbeatable speed, stunning graphics, and exceptional reliability. Whether you're a casual gamer or a competitive pro, our machines are engineered to elevate your gaming experience to new heights.</p>

            </div>
            <div class="col-md-5 order-md-1">
                <img src="{{ asset('upload-dir/website-src/gamingpc.jpg') }}" alt="Descriptive alt text" class="featurette-image img-fluid mx-auto rounded" width="600" height="600">
            </div>
        </div>
        <!-- /END THE FEATURETTES -->
    </div>


{% endblock %}