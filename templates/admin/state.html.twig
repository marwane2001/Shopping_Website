{% if field.value == 1 %}
    <span class="badge text-bg-secondary">Awaiting payment</span>
{% elseif field.value == 2 %}
    <span class="badge text-bg-info">Paid</span>
{% elseif field.value == 3 %}
    <span class="badge text-bg-warning">In preparation</span>
{% elseif field.value == 4 %}
    <span class="badge text-bg-success">Shipped</span>
{% elseif field.value == 5 %}
    <span class="badge text-bg-danger">Cancelled</span>
{% endif %}
